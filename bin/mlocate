# PODNAME: mlocate
# ABSTRACT: Find module locate by his name


use strict;
use warnings;
our $VERSION = '0.1'; # VERSION
use Module::Locate 'locate';

for my $module(@ARGV) {
    my $filename = locate($module);
    if (defined $filename) {
        print $filename, "\n";
    } else {
        warn "$module no found !\n";
    }
};

__END__
=pod

=head1 NAME

mlocate - Find module locate by his name

=head1 VERSION

version 0.1

=head1 SYNOPSIS

  mlocate Redis
  => ...lib/site_perl/5.14.2/Redis.pm

  Edit it :
  vim $(mlocate Redis)

  locate many file :
  mlocate Redis DBI
  => ...lib/site_perl/5.14.2/Redis.pm
  => ...lib/site_perl/5.14.2/DBI.pm

=head1 AUTHOR

Geistteufel <geistteufel@celogeek.fr>

